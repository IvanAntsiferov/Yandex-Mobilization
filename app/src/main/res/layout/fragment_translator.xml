<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout style="@style/CustomToolbar">

        <Spinner
            android:id="@+id/spin_from"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/ib_swap"
            android:background="@android:color/transparent" />

        <ImageButton
            android:id="@+id/ib_swap"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_swap_horiz_24dp" />

        <Spinner
            android:id="@+id/spin_to"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/ib_swap"
            android:background="@android:color/transparent" />

    </RelativeLayout>
    <!-- TODO разделить экран на 2 части, from-to -->
    <EditText
        android:id="@+id/et_translate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/translator_fragment_et_height"
        android:imeOptions="actionDone"
        android:inputType="text" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" />

</LinearLayout>